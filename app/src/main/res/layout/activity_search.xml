<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SearchActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:gravity="center_horizontal"
        android:text="@string/search_title"
        android:textSize="@dimen/text_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />





    <LinearLayout
        android:id="@+id/search_entires_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Latitude: " />

            <EditText
                android:id="@+id/lat_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="50.43242"
                tools:layout_editor_absoluteX="11dp"
                tools:layout_editor_absoluteY="160dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="Longitude: " />

            <EditText
                android:id="@+id/lon_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="-5.87532"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="304dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/radius_label1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="radius (km): " />

            <EditText
                android:id="@+id/radius_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="32" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type: " />

            <EditText
                android:id="@+id/type_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="e.g. lodge" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Keyword: " />

            <EditText
                android:id="@+id/keyword_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="e.g. surf" />

        </LinearLayout>

        <Button
            android:id="@+id/search_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/search" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>